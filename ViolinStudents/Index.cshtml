@page
@model TestApp.Pages.ViolinStudents.IndexModel
@{
}
<br>
<h2>List of Students</h2>
<a class='btn btn-primary btn-sm' href='/ViolinStudents/Create'>New Student</a>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Age</th>
			<th>Years Played</th>
			<th>Created At</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listStudents)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.name</td>
				<td>@item.email</td>
				<td>@item.age</td>
				<td>@item.yearsPlayed</td>
				<td>@item.createdAt</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/ViolinStudents/Edit?id=@item.id">Edit</a>
					<a class="btn btn-danger btn-sm" href="/ViolinStudents/Delete?id=@item.id">Delete</a>
				</td>
			</tr>

		}
	</tbody>
</table>